<% if not browser.device.mobile? %>
	<%= render 'posts/contents_controllbar'%>
<% end %>

<div class="container">
	<% @project = Project.new %>
	<%= form_for([current_user, @project]) do |f| %>
		<div id="project_form_panel">
			<div id="project_photo">
				<label>바인더 생성</label>
				<br>
				<%= image_tag("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ5zMJSxs75XUMZo3qVrkCcJbMK11TyGph_BC0Z34UBPgDrT2Nj7Q")%>
			</div>

			<div id="project_title_desc">
				<div class="form-group">
					<label>바인더 제목</label>
					<%= f.text_field :name, :placeholder => '바인더 제목을 입력해주세요', autofocus: true, class:"form-control" %>
					<label>바인더 설명</label>
					<%= f.text_area :desc, :placeholder => '바인더 설명을 입력해주세요', autofocus: true, class:"form-control", rows: "4" %>
				</div>
			</div>

			<div id="project_related_tags">
					<span class="form-group-btn">
						<button id="project-submit" type="submit" class="btn btn-default">
								생성하기
						</button>
					</span>
			</div>
		</div>
	<% end %>
</div>
