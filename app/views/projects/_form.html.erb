<div class="modal-header">
	<div id="show-post-header">
		<span class="modal-title">
			바인더(프로젝트) 만들기
		</span>&nbsp;
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	</div>
</div>
<%# feeldup의 경우에만 예외로 body padding 0 ??%>
<div class="modal-body" style="padding:0;">
	<div id="project_form" style="padding: 2%;">
		<% @project = Project.new %>
		<%= form_for([current_user, @project], remote: true) do |f| %>
			<div class="input-group">
				<%= f.text_field :name, :placeholder => '바인더 이름을 입력해주세요', autofocus: true %>
				<%# 바인더 만들기 기능은 마이필드에도 있기 때문에 구분하고자 feeld_up타입을 더해주었다 %>
				<%= f.hidden_field(:type, value: "feeld_up") %>
				<span class="input-group-btn">
					<a id="nav_search_submit" href='#'>
						<button id="project-submit" type="submit" class="btn btn-default" style="background:white; border-color:gray" onclick="$('.close').click()">
								<span style="color:gray" class="fa fa-plus" aria-hidden="true"></span>
						</button>
					</a>
				</span>
			</div>

		<% end %>
	</div>
<div class="modal-footer">
</div>


<script>
	$('#nav_search_input').keyup(function(e){
		if (e.keyCode == 13){
				$('#project-submit').click()	
		}
	})
</script>
