<div class="comments">
	<div class="comments_list">
		<%= render "comments/list" %>
	</div>
	<% if current_user %>
		<div class="comment_form">
			<%= render "comments/form" %>
		</div>
	<% else %>
	<!--11행 font-size 1.2에서 0.9로 변경했습니다 (16-10-30 동윤)-->
		<span style="font-size:0.9em;">댓글을 남기려면 <a style="font-weight:bold" href="/login">로그인</a>이 필요합니다.</span>
		<div style="margin-bottom: 5px;"></div>
	<% end %>

</div>

<script>
	$('#comments_form').keyup(function(e){
		if (e.keyCode == 13){
			$('#comment_body').val($('#comment_body').val().trim())
			if (!e.shiftKey) $('#comment-submit').click()
		}	
	})
</script>
