	<% if not browser.device.mobile? %>
		<!-- contents container -->
			<div id="contents-container" >
				<%= yield %>
			</div>
		<!-- contents container end -->

	<% else %>
		<%# 모바일에서 보이는 부분 %>
		<%# 포스트아이템의 디자인이 약간 바뀌어야 한다.%>
		<%# contents container id 뺐다. 25px marginleft 필요없어서.%>
		<div id="contents-container-mobile" >
			<%= yield %>
		</div>

	<% end %>

