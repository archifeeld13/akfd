	<div id="option_container">
		<table >
			<tr>
			<td style="padding: 5px">
				<%= link_to image_tag('photobtn.png', class: 'option_item'), '/posts/new' %>
				<br>
				<center style="color:white;">글쓰기</center>
			</td>
			<td style="padding: 5px">
