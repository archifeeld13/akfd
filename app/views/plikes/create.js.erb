<% if Plike.find_by(project_id: @project.id, user_id: current_user.id) %>
	$('#project_plikes')
		.html("<%=j link_to "추천 취소", project_plikes_path(@project.id), method: :post, remote: true %>")
<% else %>
	$('#project_plikes')
		.html("<%=j link_to "바인더 추천", project_plikes_path(@project.id), method: :post, remote: true %>")
<% end %>

$('#plikes_count').html(" <%= @project.plikes.count%>")

