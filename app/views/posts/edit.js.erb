<% if @post.post_type == 0 %>

$('.modal-content').html('<%=j render 'textup' %>')
$('.modal-body').css('max-height', $(window).height()*0.75)

$('.modal-content').append('<script src="/javascripts/summernote-ko-KR.js"></script>')

$('#input_post_content').summernote({
	height: 250,
	minHeight: 250,
	maxHeight: 250,
	toolbar:[
		['style', ['bold', 'underline', 'clear']],
		['font', ['strikethrough']],
    ['color', ['color']],
		['para', ['ul', 'ol', 'paragraph']],
    ['fontsize', ['fontsize']],
	],
	lang: 'ko-KR',
	placeholder: '이곳에 글을 작성해 주세요' 
});


<% elsif @post.post_type == 1 %>

	$('body').LoadingOverlay("hide")

	$('.modal-content').html('<%=j render 'photoup' %>')
	$('.modal-body').css('max-height', $(window).height()*0.75)

<% else %>
	alert('기능 수정 중입니다.')
<% end %>

